.panel.panel-primary
   .panel-heading
      h4 Table of all users
   .panel-body
      table.table.table-hover
         tr
            td first name
            td last name
            td ID number
         tbody
            each item in allUser
               tr
                  td #{item.firstName}
                  td #{item.lastName}
                  td
                     a(href='users/current/#{item.id}')
                        #{item.id}


